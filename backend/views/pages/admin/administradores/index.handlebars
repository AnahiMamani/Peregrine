<div class="container-fluid center">
    <div class="row">
        <div class="col">
            <div class="p-3">
                <!-- CABEÇALHO -->
                {{> adminHeader headerClass="bg-body-tertiary" backLink="/index-admin"}}
                <!-- container principal -->
                <main class="container">
                    <h1 style="color: #99067E">Usuários administradores</h1>
                    <div class="container p-4">
                        <!-- div para barra de pesquisa de usuário administrador -->
                        <div class="row mb-3 align-items-center justify-content-center w-100" style="height: 30px;">
                            <div class="input-group w-75 h-10">
                                <input type="text" class="form-control w-50 m-0" placeholder="Buscar por CPF ou login"
                                    aria-label="Buscar por CPF ou login">
                                <button class="btn btn-primary w-25 m-0" type="button">Pesquisar</button>
                            </div>
                            <!-- div para o botão para criar novo usuário administrador -->
                            <a class="btn fs-3 w-25" style="color: #99067E; font-weight: 600;"
                                href="/administradores/criar">Criar
                                administrador</a>
                        </div>
                    </div>
                    <br>
                    <!-- div de cantos arredondados-->
                    <!-- nesta div, "overflow-y: auto" adiciona rolagem vertical se necessário e "height: 60vh" define a altura máxima da caixa das denúncias-->
                    <div class="row d-flex align-items-center justify-content-center text-center rounded-4 border border-2 border-secondary container"
                        style="height: 60vh; overflow-y: auto;padding-right: 3rem;padding-left: 3rem;padding-top: 2rem;">
                        {{#if usuarios.length}}
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Ação</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each usuarios}}
                                <tr id="user-{{this.A01_ID}}">
                                    <td>{{this.A01_ID}}</td>
                                    <td>{{this.A01_EMAIL}}</td>
                                    <td>
                                        <button onclick="banirUsuario({{this.A01_ID}})">Banir</button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        {{else}}
                        <p>Nenhum usuário encontrado.</p>
                        {{/if}}
                    </div>
                </main>
            </div>
        </div>
    </div>
</div>
<script src="/scripts/deletando.js"></script>