{{> headerUsuario}}

<main class="container">
    <!--container para a pesquisa de viagem com os filtros específicos-->
    <div class="d-flex my-3 align-items-center justify-content-center container p-4 rounded-4"
        style="height: 20vh; width: 90vw; background-color: #fff; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);">
        <!-- campo para inserir a localização (Origem) desejada para a viagem (filtro)-->
        <div class="col-md-4 rounded-4 container p-4 mx-0 my-4 d-flex flex-column align-items-center"
            style="width: 15rem;">
            <div class="d-flex align-items-center mb-2">
                <img src="/images/icon-origem-localizacao.png" alt="Ícone de localização"
                    style="width: 1.5rem; height: 1.5rem; margin-right: 0.5rem;">
                <h4 class="m-0">Origem</h4>
            </div>
            <input type="text" name="searchOrigem" id="searchOrigem" placeholder="Onde você está?"
                class="form-control text-center rounded-4 container" style="height: 2.5rem;">
        </div>

        <!-- campo para inserir a localização (Destino) desejada para a viagem (filtro)-->
        <div class="col-md-4 rounded-4 container mx-0 p-4 my-4 d-flex flex-column align-items-center"
            style="width: 15rem;">
            <div class="d-flex align-items-center mb-2">
                <img src="/images/icon-destino-mundo.png" alt="Ícone de mundo - localização"
                    style="width: 1.5rem; height: 1.5rem; margin-right: 0.5rem;">
                <h4 class="m-0">Destino</h4>
            </div>
            <input type="text" name="searchDestino" id="searchDestino" placeholder="Para onde você vai?"
                class="form-control text-center rounded-4 container" style="height: 2.5rem;">
        </div>

        <!-- campo para inserir o período desejado para a viagem (filtro)-->
        <div class="col-md-4 container p-4 mx-0 my-4" style="width: 25rem;">
            <!-- div para "Embarque", ícone de data, e "Retorno" -->
            <div class="d-flex align-items-center justify-content-center mb-2">
                <h4 class="m-0">Embarque</h4>
                <img src="/images/icon-data.png" alt="Ícone de data - calendário"
                    style="width: 1.5rem; height: 1.5rem; margin: 0 0.5rem;">
                <h4 class="m-0">Retorno</h4>
            </div>

            <!-- grupo de inputs para os campos de data (embarque/retorno)-->
            <div class="input-group">
                <input type="date" name="searchDataEmbarque" id="searchDataEmbarque" placeholder="dd/mm/aaaa"
                    class="form-control text-center rounded-start-4" style="height: 2.5rem;">
                <input type="date" name="searchDataRetorno" id="searchDataRetorno" placeholder="dd/mm/aaaa"
                    class="form-control text-center rounded-end-4" style="height: 2.5rem;">
            </div>
        </div>

        <!-- coluna do botão de pesquisa (botão arredondado roxo com lupa) -->
        <div class="col-md-4 d-flex align-items-center justify-content-center" style="width: 7rem;">
            <div class="d-flex align-items-center justify-content-center"
                style="background-color: #99067E; border-radius: 50%; height: 4rem; width: 4rem;">
                <!-- botão de pesquisa da viagem que vai direcionar para a página de resultados -->
                <a href="#" name="searchViagem" id="searchViagem">
                    <img src="/images/icon-pesquisa-lupa.png" alt="Ícone de lupa - pesquisa" style="height: 2rem;">
                </a>
            </div>
        </div>


    </div>
    <!-- section com o container dos resultados -->
    <section class="container row mx-auto center">
        {{#if viagens.length}}
        <div class="row">
            {{#each viagens}}
            <div class="col-12 col-md-6 col-xl-4 pb-4">
                <div class="card rounded-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-8 text-start">
                                <h5 class="card-title">{{A03_TITULO}}</h5>
                            </div>
                            <div class="col-4 text-end">
                                <a href="/viagem/detalhes/{{id}}" style="color: #99067E;">Ver mais</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col card-text text-start">
                                {{A03_DATA_IDA}}
                            </div>
                            <div class="col card-text text-end">
                                {{A03_VAGAS}} participantes
                            </div>
                        </div>

                        <br>

                        <div class="row" style="line-height: 0.5rem;">
                            <p class="card-text"><b>Destino:</b> {{A03_DESTINO}}</p>
                            <p class="card-text"><b>Embarque:</b> {{A03_DATA_IDA}}</p>
                            <p class="card-text"><b>Retorno:</b> {{A03_DATA_VOLTA}}</p>
                            <p class="card-text"><b>Origem:</b> {{A03_ORIGEM}}</p>
                            <p class="card-text"><b>Estimativa de custo:</b> {{A03_CUSTO}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p>Nenhuma viagem encontrada.</p>
        {{/if}}
    </section>

    <div class="container center d-flex justify-content-center align-items-center">
        <a href="#" class="btn btn-primary w-25">
            Ver mais resultados
        </a>
    </div>

    <div class="row">
        <div class="col">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col">
            &nbsp;
        </div>
    </div>
</main>
{{> footer }}

