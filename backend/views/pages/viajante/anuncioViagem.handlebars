{{> headerUsuario}}

<div class="container mt-4">
    <h1 style="color: #99067E; font-weight: bold; font-size: 28px; margin-bottom: 20px;">Meu perfil</h1>
</div>

<main>
    <div class="container mt-2 rounded-4 border border-2 border-secondary" style="padding: 20px;">
        <div class="row" style="height: 65vh; overflow-y: auto;">
            {{> menuPerfil}}
            <div class="col-md-9" style="padding-left: 0;">
                <div class="card border-0">
                    <div class="card-body">
                        <h3>Minhas Viagens</h3>
                        <div class="col">
                            &nbsp;
                        </div>

                        <!-- Viagens concluidas -->
                        <div class="row mt-4">
                            <div class="col-md-10">
                                <a class="h5" style="color: black;">
                                    Concluídas
                                </a>
                            </div>
                        </div>

                        <!-- Linha separadora -->
                        <hr style="border: 1px solid black; margin-top: 3px; margin-bottom: 20px;">

                        <!-- Viagens listadas -->
                        <div class="row mt-4">
                            <div class="col-md-10">
                                <a href="/viagem/detalhes/{{viagem.A03_ID}}" class="h6"
                                    style="color: black; cursor: pointer;">{{viagem.A03_TITULO}}</a>
                            </div>
                            <div class="d-flex mt-2">
                                <p>{{viagem.A03_DATA_VOLTA}}</p>
                                <p style="padding-left:2rem ;">{{viagem.A03_VAGAS}} Vagas</p>
                            </div>
                            <p>{{viagem.A03_SUBTITULO}}</p>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <button class="btn btn-sm text-white rounded-pill"
                                style="background-color: #99067E; border-color: #99067E; margin-top:70px; padding: 8px 15px; width: 200px;"
                                data-bs-toggle="modal" data-bs-target="#modalAlterarViagem">Anúncio da viagem</button>

                            <a href="/viagem/alteracao/{{viagem.A03_ID}}" class="btn btn-sm text-white rounded-pill"
                                style="background-color:#99067E; border-color: #99067E; margin-top:70px; padding: 8px 15px; width: 200px;">Alterar
                                viagem</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Modal Alterar Viagem -->
<div class="modal fade" id="modalAlterarViagem" tabindex="-1" aria-labelledby="modalAlterarViagemLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center w-100" id="modalAlterarViagemLabel">Anúncio da viagem</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex align-items-center">
                    <!-- Toggle Pause -->
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="togglePause"
                            style="width: 50px; height: 25px;">
                        <label class="form-check-label" for="togglePause"></label>
                    </div>
                    <span class="ms-3">
                        <p> Pausar anúncio. (Ao habilitar esta opção, a viagem deixará de ser visível para as usuárias
                            do site.)</p>
                    </span>

                    <!-- Toggle Start -->
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="toggleStart"
                            style="width: 50px; height: 25px;">
                        <label class="form-check-label" for="toggleStart"></label>
                    </div>
                    <span class="ms-3">
                        <p> Ative o anúncio. (Ao habilitar esta opção, a viagem voltará a ser visível para as usuárias
                            do site.)</p>
                    </span>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", () => {
    const togglePause = document.getElementById("togglePause");
    const toggleStart = document.getElementById("toggleStart");
    const viagemId = window.location.pathname.split("/").pop(); // Extrai o ID da URL

    // Função para enviar o novo status para o servidor
    const sendStatusChange = async (novoStatus) => {
        try {
            const response = await fetch(`/control/viagem/toggle-status/${viagemId}`, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ novoStatus }),
            });

            if (response.ok) {
                const data = await response.json();
                console.log(data.message); // Exibe mensagem de sucesso
                alert(`Status da viagem alterado para: ${data.novoStatus}`);
            } else {
                console.error("Erro ao alterar o status da viagem");
                alert("Erro ao alterar o status da viagem");
            }
        } catch (error) {
            console.error("Erro ao realizar a requisição:", error);
            alert("Erro ao realizar a requisição");
        }
    };

    // Evento do togglePause (Pausar anúncio)
    if (togglePause) {
        togglePause.addEventListener("change", () => {
            const novoStatus = togglePause.checked ? "DESATIVADA" : "ATIVADA";
            sendStatusChange(novoStatus);
        });
    }

    // Evento do toggleStart (Ativar anúncio)
    if (toggleStart) {
        toggleStart.addEventListener("change", () => {
            const novoStatus = toggleStart.checked ? "ATIVADA" : "DESATIVADA";
            sendStatusChange(novoStatus);
        });
    }
});

</script>