{{> headerUsuario}}


<main>
    <div class="container mt-4">
        <h1 style="color: #99067E; font-weight: bold; font-size: 28px; margin-bottom: 20px;">Meu perfil</h1>
    </div>
    <div class="container mt-2 rounded-4 border border-2 border-secondary" style="padding: 20px;">
        <div class="row" style="height: 65vh; overflow-y: auto;">
            <!-- coluna com o menu de opções para configurar o perfil da usuaria -->
            {{>menuPerfil}}
            <div class="col-md-9" style="padding-left: 0;">
                <div class="card border-0">
                    <div class="card-body">
                        <h3>Minhas Viagens</h3>
                        <div class="row">
                            <div class="col">
                                &nbsp;
                            </div>
                        </div>
                        <form>
                            <!-- Opções  -->
                            <div class="row mt-4">
                                <div class="col text-center">
                                    <div class="p-2" style="cursor: pointer;"
                                        onmouseover="mostrarDescricao('inscritas')"
                                        onmouseout="esconderDescricao('inscritas')">
                                        <span class="h5" style="color: black;">Inscritas</span>
                                    </div>
                                </div>
                                <div class="col text-center">
                                    <div class="p-2" style="cursor: pointer;" onmouseover="mostrarDescricao('criadas')"
                                        onmouseout="esconderDescricao('criadas')">
                                        <span class="h5" style="color: black;">Criadas</span>
                                    </div>
                                </div>
                                <div class="col text-center">
                                    <div class="p-2" style="cursor: pointer;"
                                        onmouseover="mostrarDescricao('concluidas')"
                                        onmouseout="esconderDescricao('concluidas')">
                                        <span class="h5" style="color: black;">Concluídas</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Linha separadora -->
                            <hr style="border: 1px solid black; margin-top: 20px; margin-bottom: 20px;">


                            <!-- Descrição das viagens -->
                            <div class="row mt-4">
                                <div class="col-md-2 d-flex justify-content-center">
                                    <img src="/images/img-reveillon-2024.jpg" class="img-fluid rounded-circle"
                                        alt="Foto da viagem" style="width: 70px; height: 70px;">
                                </div>
                                <div class="col-md-10">
                                    <p><strong>Reveillon em Copacabana</strong></p>
                                    <p><strong>Data:</strong> 31/12/2024 | <strong>15 Mulheres</strong></p>
                                </div>
                            </div>
                            <div class="row mt-9">
                                <div class="row mt-9">
                                    <div class="col-md-10">
                                        <h5 class="fw-normal" style="font-size: 16px;">Partiu Copacabana na virada
                                            do ano! Junte-se a nós nessa viagem maravilhosa...</h5>
                                        <br>
                                        <h6 class="fw-normal" style="font-size: 14px;">Destino: Copacabana, RJ,
                                            Brasil.</h6>
                                        <h5 class="fw-normal" style="font-size: 16px;">Data: 31/12/2024</h5>
                                        <h6 class="fw-normal" style="font-size: 14px;">Horário de partida: 05:00
                                        </h6>
                                        <h6 class="fw-normal" style="font-size: 14px;">Ponto de encontro: Av. Águia
                                            de Haia, 2000 - Arthur Alvim, SP, CEP 00000-000</h6>
                                        <h6 class="fw-normal" style="font-size: 14px;">Estimativa de custo:
                                            R$1000,00 para uma pessoa.</h6>
                                        <h6 class="fw-normal" style="font-size: 14px;">Link do grupo: <a
                                                href="www.whatsapp.com.br" target="_blank">www.whatsapp.com.br</a>
                                        </h6>
                                    </div>
                                </div>
                                <br>
                                {{!-- <button class="btn btn-sm text-white rounded-pill mt-1"
                                    style="background-color: #99067E; border-color: #99067E; padding: 5px 15px; font-size: 14px; width: auto;">Desistir
                                    da viagem</button> --}}
                            </div>

                    </div>
                </div>


                <div id="descricaoCriadas" class="mt-3" style="display: none;">
                    <p>Descrição das viagens criadas...</p>
                </div>
                <div id="descricaoConcluidas" class="mt-3" style="display: none;">
                    <p>Descrição das viagens concluídas...</p>
                </div>

                </form>
            </div>
        </div>
    </div>

    <script>
        function mostrarDescricao(tipo) {

            document.getElementById('descricaoInscritas').style.display = 'none';
            document.getElementById('descricaoCriadas').style.display = 'none';
            document.getElementById('descricaoConcluidas').style.display = 'none';


            if (tipo === 'inscritas') {
                document.getElementById('descricaoInscritas').style.display = 'block';
            } else if (tipo === 'criadas') {
                document.getElementById('descricaoCriadas').style.display = 'block';
            } else if (tipo === 'concluidas') {
                document.getElementById('descricaoConcluidas').style.display = 'block';
            }


            const separador = document.getElementById('separador');
            separador.style.border = '3px solid #99067E';


            if (tipo === 'inscritas') {
                separador.style.width = '90px';
            } else if (tipo === 'criadas') {
                separador.style.width = '80px';
            } else if (tipo === 'concluidas') {
                separador.style.width = '100px';
            }
        }

        function esconderDescricao(tipo) {

            const separador = document.getElementById('separador');
            separador.style.border = '1px solid rgb(109, 107, 107)';
            separador.style.width = '100%';
        }
    </script>
</main>