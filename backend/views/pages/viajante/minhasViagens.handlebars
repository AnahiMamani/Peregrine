        <script>
            function mostrarDescricao(tipo) {

                document.getElementById('descricaoInscritas').style.display = 'none';
                document.getElementById('descricaoCriadas').style.display = 'none';
                document.getElementById('descricaoConcluidas').style.display = 'none';


                if (tipo === 'inscritas') {
                    document.getElementById('descricaoInscritas').style.display = 'block';
                } else if (tipo === 'criadas') {
                    document.getElementById('descricaoCriadas').style.display = 'block';
                } else if (tipo === 'concluidas') {
                    document.getElementById('descricaoConcluidas').style.display = 'block';
                }


                const separador = document.getElementById('separador');
                separador.style.border = '3px solid #99067E';


                if (tipo === 'inscritas') {
                    separador.style.width = '90px';
                } else if (tipo === 'criadas') {
                    separador.style.width = '80px';
                } else if (tipo === 'concluidas') {
                    separador.style.width = '100px';
                }
            }

            function esconderDescricao(tipo) {

                const separador = document.getElementById('separador');
                separador.style.border = '1px solid rgb(109, 107, 107)';
                separador.style.width = '100%';
            }
        </script>

