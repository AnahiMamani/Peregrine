{{> headerUsuario}}
<main>
    <div class="container mt-4">
        <h1 style="color: #99067E; font-weight: bold; font-size: 28px; margin-bottom: 20px;">Meu perfil</h1>
    </div>
    <div class="container mt-2 rounded-4 border border-2 border-secondary" style="padding: 20px;">
        <div class="row" style="height: 65vh; overflow-y: auto;">
            {{>menuPerfil}}
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items">
                            <!-- Container da foto de perfil -->
                            <div style="position: relative; width: 100px; height: 100px; margin-right: 20px;">
                                <!-- Foto de perfil -->
                                <img src="/images/perfil.jpg" alt="Foto de Perfil" class="rounded-circle"
                                    style="width: 100%; height: 100%; object-fit: cover;">
                                <!-- Ícone de lápis para editar a foto -->
                                <a href="#" data-bs-toggle="modal" data-bs-target="#uploadModal"
                                    style="position: absolute; bottom: 5px; right: 5px; background-color: rgb(255, 255, 255); border-radius: 50%; padding: 5px;">
                                    <img src="/images/icone_editar_foto.png" alt="Ícone de editar foto"
                                        style="width: 20px; height: 20px;">
                                </a>
                            </div>
                            <div class="container mt-4">
                                <h3>Editar Perfil</h3>
                                <form action="/control/editarPerfil" method="post">
                                    <div class="modal fade" id="uploadModal" tabindex="-1"
                                        aria-labelledby="uploadModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="uploadModalLabel">Alterar Foto do
                                                        Perfil</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Fechar"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <input type="file" class="form-control" id="profilePicture"
                                                        accept="image/*">
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Cancelar</button>
                                                    <button type="button" class="btn btn-primary"
                                                        style="background-color: #99067E; border-color: #99067E">Salvar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Apelido</label>
                                        <input name="apelido" type="text" class="form-control" id="name"
                                            placeholder="{{user.nome}}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="celular" class="form-label">Celular</label>
                                        <input name="celular" type="tel" class="form-control" id="celular"
                                            placeholder="{{user.celular}}" pattern="\(\d{2}\) \d{5}-\d{4}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="description" class="form-label">Bio</label>
                                        <textarea name="descricao" class="form-control" id="description" rows="3"
                                            placeholder="{{user.descricao}}"></textarea>
                                    </div>
                                    <button style="background-color: #99067E; color:white;" type="submit"
                                        class="btn btn-primary">Salvar</button>
                                </form>
                                <a href="/perfil"><button style="background-color: #868585; color:white;" type="submit"
                                        class="btn btn-primary">Cancelar</button></a>
                            </div>
                        </div>s
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>